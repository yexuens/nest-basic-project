{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ]
  },
  "generateOptions": {
    "spec": false
  },
  "schematics": {
    "@nestjs/schematics:controller": {
      "spec": false
    },
    "@nestjs/schematics:service": {
      "spec": false
    },
    "@nestjs/schematics:resource": {
      "spec": false
    }
  }
}
